		"passport-http-bearer": "*",
		"redis": "*",
		// strictly optional c implementation of redis client; marginally faster
		//"hiredis": "*", //does not work on windows, don't want to troubleshoot it now
		"connect-redis": "*",
		"nodetime": "*",
		"superagent": "*",
		"connect-flash": "*", //required for passport auth 'flashes'
		"forever": "*", //forever-monitor version 1.2 is broken - use version 1.1 instead
