	a(href='/', id='returnButton' class='ui-shadow ui-btn ui-corner-all', style='width:85%; margin-top: 15px; margin-bottom: 15px; margin-left: auto; margin-right: auto; padding: 15px;') Tillbaka

	script.
		//console.log('data');
		document.getElementById('gridButton').onclick = function() {
			if(topData.language && topData.language === 'english') {
				alert('The grid visualization is not available on this device. Please try it out on the large touch TV!');
			} else {
				alert('Tyvärr är ej denna funktion tillgänglig på denna enhet, vad god att testa på tvn med touch.');
			}
		}