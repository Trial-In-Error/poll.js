block content
	h1= title

	+serveJS('clientPollOverview.js')
	script(src='/v11n/v11n.js')

	link(rel='stylesheet', href='/stylesheets/roundList.css')
	link(rel='stylesheet', href='/v11n/css/c3.css')
	link(rel='stylesheet', href='/v11n/css/chart.css')

	h2(id='pollTitle')
	p(id='pollMetadata')
	div(id='collapsibleSet' data-role='collapsibleset' data-mini='true' data-inset='false' style='max-width: 100%; margin:0 auto;')
