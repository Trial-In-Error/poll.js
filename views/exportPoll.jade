extends layout

block content
	+serveJS('clientExportPoll.js')

	div(style='max-width: 80%; margin:0 auto')
		p(style='text-align: left' id='pollname')
		div(class='ui-corner-all')
			div(id='pollname' class='ui-bar ui-bar-a')
				h3
			div(id='polljson' class='ui-body ui-body-a')
				pre(id='json')
		a(href='#', id='refreshbutton', class='ui-shadow ui-btn ui-corner-all', style='margin: 15px; padding: 15px;') Refresh
		a(href='#', id='savebutton', class='ui-shadow ui-btn ui-corner-all', style='margin: 15px; padding: 15px;') Save
		a(href='#', id='clonebutton', class='ui-shadow ui-btn ui-corner-all', style='margin: 15px; padding: 15px;') Clone