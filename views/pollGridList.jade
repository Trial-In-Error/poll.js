
extends layout

block head
	style.
		::-webkit-scrollbar {
			width: 2em;
			height: 2em;
		}
		::-webkit-scrollbar-button {
			background: #F2F7D8;
		}
		::-webkit-scrollbar-track-piece {
			background: #888;
		}
		::-webkit-scrollbar-thumb {
			background: #901f2f;
		}

block content

	//WARN: THIS IS REALLY UNCOOL; the scripts should be declared in head, not body
	if locals.expose.exists['newpollvis.js']
		script(src='/dist/javascripts/newpollvis.js')
	else
		script(src='/javascripts/newpollvis.js')

	//if locals.expose.exists['clientPollGrid.js']
	//	script(src='/dist/javascripts/clientPollGrid.js')
	//else
	//	script(src='/javascripts/clientPollGrid.js')
	script(src='/javascripts/clientPollGridList.js')


	script(src='/javascripts/spin.js')
	script(src='/javascripts/simple_statistics.js')
	script(src='/javascripts/d3.min.js')
	script(src='/javascripts/c3.min.js')
	script(src='/javascripts/clientGridListPanel.js')
	script(src='/javascripts/isotope.min.js')
	script(src='/javascripts/packery-mode.pkgd.min.js')

	link(rel='stylesheet', href='/stylesheets/c3.css')
	link(rel='stylesheet', href='/stylesheets/roundList.css')

	style.
		.item { background-color: #FEF9ED; height: 18vw; width: 18%;overflow: hidden; cursor: pointer;}

		.item.big { background-color: #FFFFFD;width: 48%; height: 48vw; cursor: auto;}
		
		.grid-sizer {width: 18%;}
		
		@media screen and (min-width: 720px) {
			.item { width: 8%; height: 8vw;}
			.grid-sizer {width: 8%;}
		}
		
		.gutter-sizer {width: 2%;}
		
		.container {margin: 0px overflow: scroll;}

		.item.highlighted {background-color: #9f9f9f}

	div(id='container' class='container')
		div(class='gutter-sizer')
		div(class='grid-sizer')

block panel
	h2(class="ui-bar ui-bar-a" id="pollTitle")
	div(id='collapsibleSet' data-role='collapsibleset' data-mini='true' data-inset='false' style='max-width: 100%; margin:0 auto;')
	div
		a(href='#', data-ajax='true' id='nextButton' class='ui-btn ui-corner-all', style='margin: 15px; padding: 15px;') Nästa undersökning
		a(href='#', data-ajax='true' id='returnButton' class='ui-btn ui-corner-all', style='margin: 15px; padding: 15px;') Dela data